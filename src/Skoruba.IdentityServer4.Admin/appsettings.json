{
  "AppSettings": {
    "IdentityAdminRedirectUri": "http://localhost:9000/signin-oidc",
    "AdministrationPolicy": "RequireAdministratorRole",
    "AdministrationRole": "SkorubaIdentityAdminAdministrator",

    "IdentityServerBaseUrl": "http://localhost:5000",
    "IdentityAdminBaseUrl": "http://localhost:9000",
    "IdentityAdminCookieName": "IdentityServerAdmin",
    "OidcClientId": "skoruba_identity_admin"
  },

  "ConnectionStrings": {
    "AdminConnection": "Server=(localdb)\\mssqllocaldb;Database=IdentityServer4Admin;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    },

    "SerilogLogging": {
      // set MinimumLogLevel [0-5] to enable sink, [6] to disable
      // [0]-verbose [1]-debug [2]-information [3]-warning [4]-error [5]-fatal [6]-none

      // Splunk
      "SplunkEventCollector": "http://xx.xx.xx.xx:8088/services/collector/event",
      "SplunkIndex": "identity_admin",
      "SplunkSource": "Development",
      "SplunkLogPostData": "false",
      "SplunkMinimumLogLevel": "6",

      //AppInsights
      "AppInsightsInstrumentationKey": "xxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxx",
      "AppInsightsMinimumLogLevel": "6",

      //File
      "FileLogPath": "C:/teamo/Logs/admin-dev-.log",
      "FileMinimumLogLevel": "6",

      // Database
      "DBAutoCreation": "true",
      "DbConnectionString": "Server=(localdb)\\mssqllocaldb;Database=IdentityServer4Admin;Trusted_Connection=True;MultipleActiveResultSets=true",
      "DbTableName": "SerilogLog"
    }
  }
}