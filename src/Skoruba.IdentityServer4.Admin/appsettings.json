{
  "AppSettings": {
    "IdentityAdminRedirectUri": "http://localhost:9000/signin-oidc",
    "AdministrationPolicy": "RequireAdministratorRole",
    "AdministrationRole": "SkorubaIdentityAdminAdministrator",

    "IdentityServerBaseUrl": "http://localhost:5000",
    "IdentityAdminBaseUrl": "http://localhost:9000",
    "IdentityAdminCookieName": "IdentityServerAdmin",
    "OidcClientId": "skoruba_identity_admin"
  },

  "ConnectionStrings": {
    "AdminConnection": "Server=(localdb)\\mssqllocaldb;Database=IdentityServer4Admin;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    },

    "SerilogLogging": {
      // set MinimumLogLevel [0-5] to enable sink, [6] to disable
      // [0]-verbose [1]-debug [2]-information [3]-warning [4]-error [5]-fatal [6]-none

      // Splunk
      "Splunk_EventCollector": "http://xx.xx.xx.xx:8088/services/collector/event",
      "Splunk_Index": "identity_admin",
      "Splunk_Source": "Development",
      "Splunk_LogPostData": "false",
      "Splunk_MinimumLogLevel": "6",

      //AppInsights
      "AppInsights_InstrumentationKey": "xxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxx",
      "AppInsights_MinimumLogLevel": "6",

      //File
      "File_LogPath": "C:/teamo/Logs/admin-dev-.log",
      "File_MinimumLogLevel": "6",

      // Database
      "DB_AutoCreation": "true",
      "Db_ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=IdentityServer4Admin;Trusted_Connection=True;MultipleActiveResultSets=true",
      "Db_TableName": "SerilogLog"
    }
  }
}